{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API Service",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "python": "${workspaceFolder}/backend/.venv/bin/python",
      "args": [
        "backend.api.main:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8222",
        "--reload"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "DATA_BASE_DIR": "/opt/homebrew/var/www/church/web/data",
        "FULL_ARTICLE_SERVICE_URL": "http://127.0.0.1:8222",
        "FULL_ARTICLE_MODEL": "gemini-2.5-pro"
      }
    },
    {
      "name": "Run API Module (no Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "backend.api.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "DATA_BASE_DIR": "/opt/homebrew/var/www/church/web/data",
        "FULL_ARTICLE_MODEL": "gemini-2.5-pro"
      }
    },
    {
      "name": "Debug Next.js App",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/web",
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "console": "integratedTerminal",
      "restart": true,
      "serverReadyAction": {
        "pattern": "started server on .*:(\\d+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Slide Detector",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/api/slide_detector.py",
      "console": "integratedTerminal",
      "args": [
        "--video",
        "/Volumes/Jun SSD/data/video/2019-2-15 å¿ƒmp4.mp4",
        "--output",
        "--scene-threshold",
        "0.05",
        "--blue-min",
        "81",
        "--output-dir",
        "/opt/homebrew/var/www/church/web/data/slides"
      ]
    },
  ]
}