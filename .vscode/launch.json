{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API Service",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend.api.main:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8222",
        "--reload"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "DATA_BASE_DIR": "/opt/homebrew/var/www/church/web/data",
        "FULL_ARTICLE_SERVICE_URL": "http://127.0.0.1:8222",
        "FULL_ARTICLE_MODEL": "gemini-2.5-pro"
      }
    },
    {
      "name": "Run API Module (no Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "backend.api.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "DATA_BASE_DIR": "/opt/homebrew/var/www/church/web/data",
        "FULL_ARTICLE_MODEL": "gemini-2.5-pro"
      }
    },
    {
      "name": "Generate Webcast Audio",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/webcast_tts.py",
      "args": [
        "--ssml-file",
        "${workspaceFolder}/backend/test2.ssml",
        "--output",
        "${workspaceFolder}/backend/test2.mp3",
        "--no-vertex"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug Next.js App",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/web",
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "console": "integratedTerminal",
      "restart": true,
      "serverReadyAction": {
        "pattern": "started server on .*:(\\d+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ]
}
